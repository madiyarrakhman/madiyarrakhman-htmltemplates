{
    "name": "wedding-invitation-app",
    "version": "1.0.0",
    "description": "Full stack wedding invitation app",
    "main": "api/dist/server.js",
    "scripts": {
        "start": "cd backend && go run main.go",
        "dev": "cd backend && go run main.go",
        "build:frontend": "cd frontend && npm install && npm run build",
        "build": "npm run build:frontend",
        "test": "npm test --prefix api_backup && npm test --prefix frontend -- --run",
        "migrate": "npm run migrate --prefix api_backup"
    },
    "dependencies": {
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.3",
        "pg": "^8.11.3"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": "20.x"
    }
}